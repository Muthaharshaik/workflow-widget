<?xml version="1.0" encoding="utf-8"?>
<widget id="lowcodelabs.workflowrolewidget.Workflowrolewidget" pluginWidget="true" needsEntityContext="true" offlineCapable="true"
        supportedPlatform="Web"
        xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    
    <name>Workflow Role Widget</name>
    <description>Custom workflow visualization for role masters with horizontal/vertical layout based on order</description>
    <icon/>
    <properties>
        <!-- Data source configuration -->
        <propertyGroup caption="Data source">
            <property key="roleDataSource" type="datasource" isList="true">
                <caption>Role masters</caption>
                <description>Data source for role master entities</description>
            </property>
        </propertyGroup>
        
        <!-- Role Master Attributes -->
        <propertyGroup caption="Role Master Attributes">
            <property key="roleName" type="attribute" dataSource="roleDataSource">
                <caption>Role Name</caption>
                <description>Role name attribute from RoleMaster entity</description>
                <attributeTypes>
                    <attributeType name="String"/>
                </attributeTypes>
            </property>
            
            <property key="orderNumber" type="attribute" dataSource="roleDataSource">
                <caption>Order</caption>
                <description>Order number for workflow sequence</description>
                <attributeTypes>
                    <attributeType name="Integer"/>
                </attributeTypes>
            </property>
            
            <property key="roleType" type="attribute" dataSource="roleDataSource">
                <caption>Role Type</caption>
                <description>Role type (Initiator/Approver)</description>
                <attributeTypes>
                    <attributeType name="Enum"/>
                    <attributeType name="String"/>
                </attributeTypes>
            </property>

            <property key="userFromAD" type="attribute" dataSource="roleDataSource">
               <caption>User From AD</caption>
               <description>Boolean indicating if the user is from AD</description>
               <attributeTypes>
                   <attributeType name="Boolean"/>
                </attributeTypes>
            </property>

            <property key="ableToApprove" type="attribute" dataSource="roleDataSource">
                <caption>Able to Approve</caption>
                <description>Boolean indicating if role can approve</description>
                <attributeTypes>
                   <attributeType name="Boolean"/>
                </attributeTypes>
            </property>

            <property key="ableToReject" type="attribute" dataSource="roleDataSource">
                <caption>Able to Reject</caption>
                <description>Boolean indicating if role can reject</description>
                <attributeTypes>
                   <attributeType name="Boolean"/>
                </attributeTypes>
            </property>

            <property key="ableToReturn" type="attribute" dataSource="roleDataSource">
                <caption>Able to Return</caption>
                <description>Boolean indicating if role can return</description>
                <attributeTypes>
                   <attributeType name="Boolean"/>
                </attributeTypes>
            </property>

        </propertyGroup>
        
        <!-- Actions -->
        <propertyGroup caption="Events">
            <property key="onClickAction" type="action" dataSource="roleDataSource" required="false">
                <caption>On click</caption>
                <description>Action to execute when role master is clicked for editing </description>
            </property>
            
            <property key="onDeleteAction" type="action" dataSource="roleDataSource" required="false">
                <caption>On delete</caption>
                <description>Action to execute when delete button is clicked</description>
            </property>

            <property key="onNonADUserIconClick" type="action" dataSource="roleDataSource">
               <caption>On Non-AD User Icon Click</caption>
               <description>Action to execute when non-AD user icon is clicked</description>
            </property>
            
        </propertyGroup>
        
        <!-- Appearance -->
        <propertyGroup caption="Appearance">
            <property key="emptyStateImage" type="image" required="false">
               <caption>Empty state image</caption>
                <description>Image to show when no data available</description>
            </property>
        </propertyGroup>
        
        <!-- Common properties -->
        <propertyGroup caption="Common">
            <systemProperty key="Name"/>
            <systemProperty key="TabIndex"/>
        </propertyGroup>
        
        <!-- Visibility properties -->
        <propertyGroup caption="Visibility">
            <systemProperty key="Visibility"/>
        </propertyGroup>
    </properties>
</widget>